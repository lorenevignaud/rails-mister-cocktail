<h1> <%= @cocktail.name.capitalize %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> of <%= dose.ingredient.name %></li>
    <%= link_to "Delete this dose", dose_destroy_path(dose), method: :delete %>
  <% end %>
</ul>

<%= link_to "Back to all cocktails", cocktails_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>



